---
export interface Props {
    title: string;
}

const { title } = Astro.props as Props;
---

<div
    class="flex sm:flex-row flex-col w-full h-fit dark:bg-dark-2 bg-light-2 p-4 justify-between items-center gap-2"
    id="header"
>
    <a class="w-fit flex place-items-center gap-2" href="/shorts-deflector">
        <img alt="Shorts Deflector logo" class="sm:h-10 sm:w-10 h-8 w-8 select-none" src="/shorts-deflector/icon.svg" />
        <span class="sm:text-2xl text-xl font-bold mb-1 truncate">{title}</span>
    </a>
    <nav class="flex flex-row justify-around w-full sm:w-fit sm:gap-8 sm:px-4 group">
        <slot />
    </nav>
</div>
